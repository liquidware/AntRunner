<project name="build.properties" basedir="." default="...">
    <!--
        ===================================================================
         Set the properties related to the build
        ===================================================================
    -->
    <property name="build.version"      value="0" />
    <property name="repository.url.pub" value="git://github.com/liquidware/AntRunner.git"/>

    <property name="build.dir"          value="build"/>
    <property name="classes.dir"        value="${build.dir}/classes"/>
    <property name="lib.dir"            value="lib"/>
    <property name="main-class"         value="arduino.tools.AntRunner"/>
    <property name="src.java.arduino"    value="src/components/arduino"/>
     <path id="classpath">
        <fileset dir="${lib.dir}" includes="**/*.jar"/>
    </path>

</project>
